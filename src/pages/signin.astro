---
import Layout from "../layouts/Layout.astro";
const { cookies, redirect } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (accessToken && refreshToken) {
  return redirect("/dashboard");
}
---

<Layout title="SignIn">
  <form
    method="post"
    action="/api/auth/signin"
    class="flex justify-center items-center w-screen h-screen flex-col"
  >
    <div class="flex flex-col w-[50%]">
      <label>Ingresa tu correo</label>
      <input name="email" />
    </div>
    <div class="flex flex-col w-[50%]">
      <label>Ingresa tu contrase√±a</label>
      <input name="password" type="password" />
    </div>
    <div class="w-[50%] flex justify-between items-end mt-8">
      <p>
        New here? <a class="text-chichi underline" href="/#lastContainer"
          >Create an account</a
        >
      </p>
      <button>SignIn</button>
    </div>
  </form>
</Layout>
